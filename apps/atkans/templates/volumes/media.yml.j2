{% if atkans_should_activate_media_volume %}
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: atkans-pvc-media
  namespace: "{{ namespace_name }}"
  labels:
    app: atkans
    version: "{{ atkans_image_tag }}"
    deployment_stamp: "{{ deployment_stamp }}"
spec:
  accessModes:
  - ReadWriteMany
  resources:
    requests:
      storage: {{ atkans_media_volume_size }}
  storageClassName: "{{ default_storage_class_rwx }}"
{% endif %}
